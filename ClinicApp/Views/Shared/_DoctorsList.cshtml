@model IEnumerable<ClinicApp.Models.Users.Doctor>

<div class="text-start my-3">
    @if (Model.Any())
    {
        @foreach (var doctor in Model)
        {
            <div class="card">
                <div class="card-body">
                    <p class="h4">@doctor.UserName</p>
                    <p>@doctor.Speciality.Name</p>
                    <a href="#" class="btn btn-outline-primary rounded-pill">Sign up for a visit...</a>
                </div>
            </div>
        }
    }
    else
    {
        <p class="text-muted h4 text-center">There aren't any registered doctors.</p>
    }
</div>